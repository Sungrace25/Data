    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Mobile Menu Toggle
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // Smooth scrolling for navigation links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                     if (mobileMenu.classList.contains('hidden') === false) {
                        mobileMenu.classList.add('hidden');
                    }
                });
            });

            // Tabs for Products section
            const tabs = document.querySelectorAll('.tab-btn');
            const tabContents = document.querySelectorAll('.tab-content');

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    tabs.forEach(item => item.classList.remove('active'));
                    tab.classList.add('active');

                    const target = document.getElementById(tab.dataset.tab);
                    tabContents.forEach(content => content.classList.add('hidden'));
                    target.classList.remove('hidden');
                });
            });

            // Chart.js for LVSD comparison
            const ctx = document.getElementById('lvsdChart').getContext('2d');
            const lvsdChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['AiTiA™ LVSD', '기존 혈액 검사 (NT-proBNP)'],
                    datasets: [{
                        label: '진단 정확도 (AUROC)',
                        data: [0.905, 0.720],
                        backgroundColor: [
                            'rgba(16, 185, 129, 0.6)', // emerald-500
                            'rgba(203, 213, 225, 0.6)'  // slate-300
                        ],
                        borderColor: [
                            'rgba(5, 150, 105, 1)', // emerald-600
                            'rgba(100, 116, 139, 1)'   // slate-500
                        ],
                        borderWidth: 1,
                        borderRadius: 5
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.x !== null) {
                                        label += context.parsed.x;
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true,
                            max: 1.0,
                             title: {
                                display: true,
                                text: 'AUROC Score'
                            }
                        }
                    }
                }
            });
        });
    </script>

